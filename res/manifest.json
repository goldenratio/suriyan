{
	"manifest_version": 2,
	
	"name": "Suriyan",
	"description": "Solar Image Viewer. Displays the latest solar images from SOHO (Solar & Heliospheric Observatory).",
	"version": "0.4",
	"permissions": [ "tabs", "https://*.nascom.nasa.gov/*" ],
  
	"icons": { 
		"16": "icons/16.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},

    "browser_action": {
        "default_icon": "icons/16.png",
        "default_title": "Suriyan"
    },

    "background": {
        "scripts": ["background.js"]
    }

}